package board.gui;

import java.awt.Color;
import java.awt.Dimension;

import javax.swing.JButton;
import javax.swing.JScrollPane;
import javax.swing.JTable;

import board.model.Notice;
import board.model.NoticeDAO;

public class BoardList extends Page{
	JTable table;
	JScrollPane scroll;
	JButton bt;
	BoardModel model;
	NoticeDAO noticeDAO;
	public BoardList(BoardMain boardMain) {
		super(boardMain);
		
		noticeDAO = new NoticeDAO();
		table = new JTable(model = new BoardModel()); // jtable과 모델객체와의 연결
		scroll = new JScrollPane(table);
		bt = new JButton("글쓰기");
		
		scroll.setPreferredSize(new Dimension((int)this.getPreferredSize().getWidth(), 600));
		
		add(scroll);
		add(bt);
		
		getList();
		table.updateUI();
		
		bt.addActionListener((e)-> {
			boardMain.showPage(Pages.valueOf("BoardWrite").ordinal());
		});
	}
	public void getList() {
		
	}

}
